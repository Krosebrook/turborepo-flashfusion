{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "infra:validate": {
      "cache": false,
      "outputs": ["tools/infrastructure/pipeline.log"]
    },
    "infra:plan": {
      "cache": false,
      "outputs": ["tools/infrastructure/pipeline.log", "**/*.tfplan"]
    },
    "infra:apply": {
      "cache": false,
      "outputs": ["tools/infrastructure/pipeline.log"]
    },
    "infra:drift": {
      "cache": false,
      "outputs": ["tools/infrastructure/pipeline.log"]
    }
  },
  "globalDependencies": [
    "**/.env.*local",
    "**/.env",
    "**/package.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "ANTHROPIC_API_KEY",
    "SUPABASE_URL"
  ]
}
