{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.*", "**/*.spec.*", "jest.config.*"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", ".eslintrc.*", "eslint.config.*"]
    },
    "format": {
      "outputs": [],
      "inputs": ["src/**", ".prettierrc*", "prettier.config.*"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env.*local",
    "**/.env",
    "**/package.json",
    "tsconfig.base.json"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "ANTHROPIC_API_KEY",
    "SUPABASE_URL",
    "FLASHFUSION_API_URL",
    "FLASHFUSION_API_KEY"
  ]
}
